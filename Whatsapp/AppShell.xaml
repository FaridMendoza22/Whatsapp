<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Whatsapp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Whatsapp"
    xmlns:pages="clr-namespace:Whatsapp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Whatsapp">

    <TabBar>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:ChatsPage}" Title="Chats" />
            <ShellContent ContentTemplate="{DataTemplate pages:EstadosPage}" Title="Status" />
            <ShellContent ContentTemplate="{DataTemplate pages:LlamadaPage}" Title="Calls" />
        </Tab>
    </TabBar>

</Shell>
